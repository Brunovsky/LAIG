<yas>
    <scene root="root" axis_length="4.0"/>

    <views default="cam-perspective-0">
        <perspective id="cam-perspective-0" near="0.5" far="500" angle="30">
            <from x="-15.0" y="15.0" z="15.0"/>
            <to x="0.0" y="0.0" z="0.0"/>
        </perspective>
    </views>

    <ambient>
        <ambient r="0.80" g="0.80" b="0.80" a="1.0"/>
        <background r="0.5" g="0.60" b="0.80" a="1.0"/>
    </ambient>

    <lights>
        <spot id="spot-light-4" enabled="1" angle="30" exponent="25">
            <location x="0" y="30" z="10" w="1"/>
            <target x="5" y="0" z="0"/>
            <ambient r="0.10" g="0.10" b="0.10" a="1"/>
            <diffuse r="0.70" g="0.70" b="0.70" a="1"/>
            <specular r="0.95" g="0.85" b="0.90" a="1"/>
        </spot>
    </lights>

    <textures>
        <texture id="tex-bank" file="images/bank.jpg"/>
        <texture id="tex-leaves" file="images/leaves.jpg"/>
        <texture id="tex-rocks" file="images/rocks.jpg"/>
        <texture id="tex-trunk" file="images/trunk.jpg"/>
        <texture id="tex-snow" file="images/snow.jpg"/>
        <texture id="tex-vidral" file="images/vidral.jpg"/>
        <texture id="tex-carrot" file="images/carrot.jpg"/>
        <texture id="tex-eye" file="images/eye.jpg"/>
        <texture id="tex-wood" file="images/wood.jpg"/>
        <texture id="tex-housewall" file="images/housewall.jpg"/>
        <texture id="tex-gold" file="images/gold.jpg"/>
        <texture id="tex-window" file="images/window.jpg"/>
        <texture id="tex-chimney" file="images/chimney.jpg"/>
        <texture id="tex-roof" file="images/roof.jpg"/>
        <texture id="tex-snowlyroad" file="images/snowlyroad.jpg"/>
        <texture id="tex-snowlygrass" file="images/snowlygrass.jpg"/>
        <texture id="tex-christmastree" file="images/christmastree.jpg"/>
        <texture id="tex-tronco" file="images/tronco.jpg"/>
        <texture id="tex-black" file="images/black.jpg"/>
        <texture id="tex-red" file="images/red.jpg"/>
    </textures>

    <materials>
        <material id="mat-1" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="0"/>
            <ambient  r="0.7" g="0.7" b="0.7" a="1"/>
            <diffuse  r="0.8" g="0.9" b="0.9" a="1"/>
            <specular r="0.90" g="0.95" b="0.95" a="1"/>
        </material>
    </materials>
 
    <transformations>
        <transformation id="noop">
            <translate x="0" y="0" z="0"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rect">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
        </primitive>
        <primitive id="cube">
            <cube side="1"/>
        </primitive>
        <primitive id="stairs-triangle">
            <triangle x1="0" y1="-0.3" z1="-0.15"
                      x2="0" y2="-0.3" z2="0.15"
                      x3="0" y3="-0.6" z3="-0.15"/>
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
                <scale x="1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-wood" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="staircase-10s"/>
            </children>
        </component>

<!-- STAIRCASE-STEP -->
        <component id="stair-board">
            <transformation>
                <scale x="1.2" y="0.05" z="0.4"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-wood" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="cube"/>
            </children>
        </component>

        <component id="stair-underbox">
            <transformation>
                <translate x="0" y="-0.15" z="0"/>
                <scale x="1.1" y="0.3" z="0.3"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-snow" length_s="1.0" length_t="1.0"/>
