                <primitiveref id="cube"/>
            </children>
        </component>

        <component id="stair-cover">
            <transformation>
                <translate x="0" y="-0.45" z="0"/>
                <rotate axis="x" angle="45"/>
                <scale x="1.1" y="0.424264069" z="1"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-snow" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="stair-triangles">
            <transformation>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-snow" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="stair-triangles-left"/>
                <componentref id="stair-triangles-right"/>
                <componentref id="stair-cover"/>
            </children>
        </component>

        <component id="stair-triangles-left">
            <transformation>
                <translate x="0.55" y="0" z="0"/>
            </transformation>
            <materials>
