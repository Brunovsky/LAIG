<yas>
    <scene root="quadrado-lado-1" axis_length="4.0"/>

    <views default="cam-perspective-1">
        <perspective id="cam-perspective-1" near="0.5" far="500" angle="45">
            <from x="-25.0" y="15.0" z="10.0"/>
            <to x="60.0" y="-20.0" z="10.0"/>
        </perspective>
        <ortho id="cam-ortho-1" near="0.5" far="500" left="3" right="7" top="5" bottom="6"/>
    </views>

    <ambient>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
        <background r="0.075" g="0.125" b="0.150" a="1.0"/>
    </ambient>

    <lights>
        <omni id="light-1" enabled="1">
            <location x="6" y="20" z="15" w="1"/>
            <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
            <diffuse r="1.0" g="1.0" b="0.25" a="1.0"/>
            <specular r="0.3" g="0.3" b="0.3" a="1.0"/>
        </omni>
        <omni id="light-2" enabled="1">
            <location x="3" y="-15" z="-10" w="1"/>
            <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
            <diffuse r="1.0" g="0.25" b="1.0" a="1.0"/>
            <specular r="0.3" g="0.3" b="0.3" a="1.0"/>
        </omni>
        <omni id="light-3" enabled="1">
            <location x="0" y="10" z="8" w="1"/>
            <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
            <diffuse r="0.25" g="1.0" b="1.0" a="1.0"/>
            <specular r="0.3" g="0.3" b="0.3" a="1.0"/>
        </omni>
        <omni id="light-4" enabled="1">
            <location x="3" y="30" z="-4" w="1"/>
            <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
            <diffuse r="0.25" g="1.0" b="1.0" a="1.0"/>
            <specular r="0.3" g="0.3" b="0.3" a="1.0"/>
        </omni>
    </lights>

    <textures>
        <texture id="tex-bank" file="images/bank.jpg"/>
        <texture id="tex-leaves" file="images/leaves.jpg"/>
        <texture id="tex-rocks" file="images/rocks.jpg"/>
        <texture id="tex-trunk" file="images/trunk.jpg"/>
        <texture id="tex-vidral" file="images/vidral.jpg"/>
    </textures>

    <materials>
        <material id="mat-1" shininess="120">
            <emission r="0.0" g="0.0" b="0.0" a="0.0"/>
            <ambient r="0.3" g="0.3" b="0.3" a="1"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="1"/>
            <specular r="0.0" g="0.2" b="0.8" a="1"/>
        </material>
    </materials>
 
    <transformations>
        <transformation id="nomove">
            <scale x="1" y="1" z="1"/>
        </transformation>
    </transformations>
    
    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/> 
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="32" stacks="32"/>
        </primitive>
    </primitives>

    <components> <!-- comeÃ§o-->
        <component id="quadrado-lado-1"> <!-- quadrado inicial -->
            <transformation>
                <translate x="0" y="0" z="-0.5"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>

             <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>

             <children>
                <primitiveref id="rectangle"/>
             </children>
        </component>

        <component id="quadrado-lado-2"> <!-- quadrado inicial -->
           <transformation>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
             <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>
             <children>
                <primitiveref id="rectangle"/>
             </children>
        </component>
        

        <component id="quadrado-lado-3"> <!-- quadrado inicial -->
            <transformation>
                <translate x="0.5" y="0" z="0"/>
                <rotate axis="y" angle="90"/> 
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="quadrado-lado-4"> <!-- quadrado inicial -->
            <transformation>
                <translate x="-0.5" y="0" z="0"/>
                <rotate axis="y" angle="90"/> 
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="quadrado-lado-5"> <!-- quadrado inicial -->
            <transformation>
                <translate x="0" y="0.5" z="0"/>
                <rotate axis="x" angle="90"/> 
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="quadrado-lado-6"> <!-- quadrado inicial -->
            <transformation>
                <translate x="0" y="-0.5" z="0"/>
                <rotate axis="x" angle="90"/> 
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>    
            <children>  
                <primitiveref id="rectangle"/>
            </children>
        </component>
    
        <component id="single-cube"> <!-- cube in center with 1 size -->
            <transformation>
                <translate x="5" y="0" z="0"/> 
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>    
            <children>  
                <componentref id="quadrado-lado-1"/>
                <componentref id="quadrado-lado-2"/>
                <componentref id="quadrado-lado-3"/>
                <componentref id="quadrado-lado-4"/>
                <componentref id="quadrado-lado-5"/>
                <componentref id="quadrado-lado-6"/>
            </children>
        </component>

<!-- boneco de neve -->

        <component id="bigger-sphere">
            <transformation>
                <translate x="0" y="0" z="0"/> 
                <scale x="3" y="3" z="3"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>    
            <children>  
                <primitiveref id="sphere"/>
            </children>
        </component>
        
        <component id="middle-sphere"> 
            <transformation>
                <translate x="0" y="2.5" z="0"/> 
                <scale x="2" y="2" z="2"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>    
            <children>  
                <primitiveref id="sphere"/>
            </children>
        </component>
        
        <component id="smaller-sphere"> 
            <transformation>
                <translate x="0" y="7.5" z="0"/> 
                <scale x="1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-rocks" length_s="0.5" length_t="0.5"/>    
            <children>  
                <primitiveref id="sphere"/>
            </children>
        </component>
    </components>
</yas>