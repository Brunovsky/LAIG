<yas>
    <scene root="comp-spread" axis_length="4.0"/>

    <views default="cam-perspective-1">
        <perspective id="cam-perspective-1" near="0.5" far="500" angle="45">
            <from x="10.0" y="10.0" z="5.0"/>
            <to x="0.0" y="0.0" z="0.0"/>
        </perspective>
        <ortho id="cam-ortho-1" near="0.5" far="500" left="3" right="7" top="5" bottom="6"/>
    </views>

    <ambient>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
        <background r="0.025" g="0.075" b="0.125" a="1.0"/>
    </ambient>

    <lights>
        <omni id="light-1" enabled="1">
            <location x="6" y="0" z="15" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="1.0" g="1.0" b="0.25" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
        </omni>
        <omni id="light-2" enabled="1">
            <location x="3" y="5" z="-10" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="1.0" g="0.25" b="1.0" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
        </omni>
        <omni id="light-3" enabled="1">
            <location x="0" y="10" z="8" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.25" g="1.0" b="1.0" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
        </omni>
        <omni id="light-4" enabled="1">
            <location x="3" y="0" z="-4" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.25" g="1.0" b="1.0" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
        </omni>
    </lights>

    <textures>
        <texture id="tex-bank" file="images/bank.jpg"/>
        <texture id="tex-leaves" file="images/leaves.jpg"/>
        <texture id="tex-rocks" file="images/rocks.jpg"/>
        <texture id="tex-trunk" file="images/trunk.jpg"/>
        <texture id="tex-vidral" file="images/vidral.jpg"/>
    </textures>

    <materials>
        <material id="mat-1" shininess="120">
            <emission r="0.0" g="0.0" b="0.0" a="0.0"/>
            <ambient r="0.3" g="0.3" b="0.3" a="1"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="1"/>
            <specular r="0.0" g="0.2" b="0.8" a="1"/>
        </material>
    </materials>
 
    <transformations>
        <transformation id="scale-2">
            <scale x="2" y="2" z="2"/>
        </transformation>
        <transformation id="scale-3">
            <scale x="3" y="3" z="3"/>
        </transformation>
        <transformation id="scale-4">
            <scale x="4" y="4" z="4"/>
        </transformation>
    </transformations>
    
    <primitives>
        <primitive id="unit-square">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
        </primitive>
        <primitive id="unit-circle">
        	<circle radius="1" slices="64"/>
        </primitive>
        <primitive id="unit-regular">
        	<regular radius="1" sides="4"/>
        </primitive>
        <primitive id="unit-trapezium">
        	<trapezium base="2" top="1" height="1"/>
        </primitive>

        <primitive id="unit-halfsphere">
        	<halfsphere radius="1" stacks="32" slices="64"/>
        </primitive>
        <primitive id="unit-sphere">
            <sphere radius="1" stacks="32" slices="64"/>
        </primitive>
        <primitive id="unit-cylinder">
            <cylinder base="1" top="1" height="1" stacks="1" slices="64"/>
        </primitive>
        <primitive id="unit-cube">
        	<cube side="1"/>
        </primitive>
        <primitive id="unit-block">
        	<block x="1" y="2" z="3"/>
        </primitive>
        <primitive id="unit-prism">
        	<prism base="1" top="1" height="1" stacks="1" sides="4"/>
        </primitive>
        <primitive id="unit-cone">
        	<cone radius="1" height="1" stacks="1" slices="64"/>
        </primitive>
        <primitive id="unit-pyramid">
        	<pyramid radius="1" height="1" stacks="1" sides="5"/>
        </primitive>
    </primitives>

    <components>
        <component id="comp-spread">
            <transformation>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0"/>
            <children>
            	<componentref id="unit-square"/>
            	<componentref id="unit-circle"/>
            	<componentref id="unit-regular"/>
            	<componentref id="unit-trapezium"/>
            	<componentref id="unit-halfsphere"/>
            	<componentref id="unit-sphere"/>
            	<componentref id="unit-cylinder"/>
            	<componentref id="unit-cube"/>
            	<componentref id="unit-block"/>
            	<componentref id="unit-prism"/>
            	<componentref id="unit-cone"/>
            	<componentref id="unit-pyramid"/>
            </children>
        </component>
        <component id="unit-square">
        	<transformation>
        		<translate x="5" y="0" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-trunk" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-square"/>
        	</children>
        </component>
        <component id="unit-circle">
        	<transformation>
        		<translate x="10" y="0" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-vidral" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-circle"/>
        	</children>
        </component>
        <component id="unit-regular">
        	<transformation>
        		<translate x="15" y="0" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-vidral" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-regular"/>
        	</children>
        </component>
        <component id="unit-trapezium">
        	<transformation>
        		<translate x="25" y="0" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-vidral" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-trapezium"/>
        	</children>
        </component>
        <component id="unit-halfsphere">
        	<transformation>
        		<translate x="0" y="5" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-bank" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-halfsphere"/>
        	</children>
        </component>
        <component id="unit-sphere">
        	<transformation>
        		<translate x="5" y="5" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-bank" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-sphere"/>
        	</children>
        </component>
        <component id="unit-cylinder">
        	<transformation>
        		<translate x="10" y="5" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-bank" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-cylinder"/>
        	</children>
        </component>
        <component id="unit-cube">
        	<transformation>
        		<translate x="15" y="5" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-trunk" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-cube"/>
        	</children>
        </component>
        <component id="unit-block">
        	<transformation>
        		<translate x="20" y="5" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-trunk" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-block"/>
        	</children>
        </component>
        <component id="unit-prism">
        	<transformation>
        		<translate x="25" y="5" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-rocks" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-prism"/>
        	</children>
        </component>
        <component id="unit-cone">
        	<transformation>
        		<translate x="0" y="10" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-rocks" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-cone"/>
        	</children>
        </component>
        <component id="unit-pyramid">
        	<transformation>
        		<translate x="5" y="10" z="0"/>
        	</transformation>
        	<materials>
        		<material id="mat-1"/>
        	</materials>
        	<texture id="tex-leaves" length_s="1.0" length_t="1.0"/>
        	<children>
        		<primitiveref id="unit-pyramid"/>
        	</children>
        </component>
    </components>
</yas>