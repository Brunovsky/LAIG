<yas>
    <scene root="root" axis_length="4.0"/>

    <views default="cam-perspective-0">
        <perspective id="cam-perspective-0" near="0.5" far="500" angle="30">
            <from x="-15.0" y="15.0" z="15.0"/>
            <to x="0.0" y="0.0" z="0.0"/>
        </perspective>
    </views>

    <ambient>
        <ambient r="0.80" g="0.80" b="0.80" a="1.0"/>
        <background r="0.5" g="0.60" b="0.80" a="1.0"/>
    </ambient>

    <lights>
        <spot id="spot-light-4" enabled="1" angle="30" exponent="25">
            <location x="0" y="30" z="10" w="1"/>
            <target x="5" y="0" z="0"/>
            <ambient r="0.10" g="0.10" b="0.10" a="1"/>
            <diffuse r="0.70" g="0.70" b="0.70" a="1"/>
            <specular r="0.95" g="0.85" b="0.90" a="1"/>
        </spot>
    </lights>

    <textures>
        <texture id="tex-christmas" file="images/eye.jpg"/>
        <texture id="tex-gold" file="images/bed.jpg"/>
    </textures>

    <materials>
        <material id="mat-1" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="0"/>
            <ambient  r="0.7" g="0.7" b="0.7" a="1"/>
            <diffuse  r="0.8" g="0.9" b="0.9" a="1"/>
            <specular r="0.90" g="0.95" b="0.95" a="1"/>
        </material>
    </materials>
 
    <transformations>
        <transformation id="noop">
            <translate x="0" y="0" z="0"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rect">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
        </primitive>
        <primitive id="cylinder">
            <cylinder base="0.5" top="0.5" height="1" slices="64" stacks="64"/>
        </primitive>
        <primitive id="torus">
            <torus inner="0.2" outer="0.35" slices="64" loops="1"/>
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
                <scale x="1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="tex-christmas" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="couch"/>
            </children>
        </component>

        <component id="cube-front">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="inherit" length_s="0.7" length_t="0.7"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="cube-back">
            <transformation>
                <rotate axis="y" angle="180"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="inherit" length_s="0.7" length_t="0.7"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="cube-left">
            <transformation>
                <rotate axis="y" angle="-90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="inherit" length_s="0.7" length_t="0.7"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="cube-right">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="inherit" length_s="0.7" length_t="0.7"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="cube-bottom">
            <transformation>
                <rotate axis="x" angle="90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="inherit" length_s="0.7" length_t="0.7"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="cube-top">
            <transformation>
                <rotate axis="x" angle="-90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="inherit" length_s="0.7" length_t="0.7"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="cube">
            <transformation>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="cube-front"/>
                <componentref id="cube-back"/>
                <componentref id="cube-left"/>
                <componentref id="cube-right"/>
                <componentref id="cube-bottom"/>
                <componentref id="cube-top"/>
            </children>
        </component>

        <component id="couch">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-christmas" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="couch-base"/>
                <componentref id="couch-armrest-left"/>
                <componentref id="couch-armrest-right"/>
                <componentref id="couch-back"/>
                <componentref id="couch-main-pillow"/>
                <componentref id="couch-pillow-left"/>
                <componentref id="couch-pillow-right"/>
                <componentref id="couch-pillow-middle"/>
                <componentref id="couch-torus"/>
            </children>
        </component>

        <component id="couch-base">
            <transformation>
                <scale x="4.0" y="0.3" z="1.8"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="cube"/>
            </children>
        </component>

        <component id="couch-armrest">
            <transformation>
                <translate x="0" y="0.5" z="0"/>
                <scale x="0.2" y="1.3" z="1.8"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="cube"/>
            </children>
        </component>

        <component id="couch-armrest-left">
            <transformation>
                <translate x="-2.1" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="couch-armrest"/>
            </children>
        </component>

        <component id="couch-armrest-right">
            <transformation>
                <translate x="2.1" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="couch-armrest"/>
            </children>
        </component>

        <component id="couch-back">
            <transformation>
                <translate x="0" y="0.75" z="-0.8"/>
                <scale x="4.0" y="1.2" z="0.2"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="cube"/>
            </children>
        </component>

        <component id="couch-main-pillow">
            <transformation>
                <translate x="0" y="0.40" z="0.15"/>
                <scale x="4.0" y="0.4" z="1.85"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="0.4" length_t="0.4"/>
            <children>
                <componentref id="cube"/>
            </children>
        </component>

        <component id="couch-pillow">
            <transformation>
                <scale x="0.5" y="1.2" z="0.5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="cylinder"/>
            </children>
        </component>

        <component id="couch-pillow-left">
            <transformation>
                <translate x="-1.75" y="0.85" z="-0.3"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="couch-pillow"/>
            </children>
        </component>

        <component id="couch-pillow-right">
            <transformation>
                <translate x="1.75" y="0.85" z="-0.3"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="couch-pillow"/>
            </children>
        </component>

        <component id="couch-pillow-middle">
            <transformation>
                <translate x="-0.1" y="0.85" z="-0.45"/>
                <rotate axis="z" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="couch-pillow"/>
            </children>
        </component>

        <component id="couch-torus">
            <transformation>
                <translate x="0.8" y="1.13" z="-0.405"/>
                <rotate axis="x" angle="-20"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-gold" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="torus"/>
            </children>
        </component>
    </components>
</yas>
