<yas>
    <scene root="comp1" axis_length="0.5"/>

    <views default="cam1">
        <perspective id="cam1" near="0.35" far="100" angle="32">
            <from x="3.2" y="3.2" z="3.2"/>
            <to x="10" y="10" z="10"/>
        </perspective>
        <ortho id="cam2" near="0.35" far="100" left="3" right="4" top="5" bottom="6"/>
    </views>


    <ambient>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
        <background r="0" g="0" b="0" a="1.0"/>
    </ambient>

    <lights>
        <omni id="light1" enabled="1">
            <location x="10" y="15" z="15" w="12"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
            <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
        </omni>
    </lights>

    <textures>
        <texture id="texture1" file="scenes/images/bank.jpg"/>
    </textures>

    <materials>
        <material id="material1" shininess="120">
            <emission r="0.0" g="0.0" b="0.0" a="0.0"/>
            <ambient r="0.3" g="0.3" b="0.3" a="1"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="1"/>
            <specular r="0.0" g="0.2" b="0.8" a="1"/>
        </material>
    </materials>
 
    <transformations>
        <transformation id="trans1">
            <translate x="5" y="5" z="0.3"/>
            <rotate axis="x" angle="56"/>
            <scale x="1.5" y="1.5" z="0.5"/>
        </transformation>
    </transformations>
    
    <primitives>
        <primitive id="rect1">
            <rectangle x1="1" y1="4" x2="4" y2="1"/>
        </primitive>
        <primitive id="sphere1">
            <sphere radius="3" stacks="32" slices="32"/>
        </primitive>
        <primitive id="cylinder1">
            <cylinder base="2" top="3" height="5" stacks="32" slices="32"/>
        </primitive>
    </primitives>

    <components>
        <component id="comp1">
            <transformation>
                <translate x="5" y="5" z="0.3"/>
                <rotate axis="x" angle="56"/>
                <scale x="1.5" y="1.5" z="0.5"/>
            </transformation>
            <materials>
                <material id="material1"/>
            </materials>
            <texture id="texture1" length_s="3.0" length_t="3.0"/>
            <children>
                <primitiveref id="rect1"/>
                <primitiveref id="sphere1"/>
            </children>
        </component>
    </components>
</yas>
