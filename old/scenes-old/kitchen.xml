<yas>
    <scene root="root" axis_length="4.0"/>

    <views default="cam-perspective-0">
        <perspective id="cam-perspective-0" near="0.5" far="500" angle="30">
            <from x="-15.0" y="15.0" z="15.0"/>
            <to x="0.0" y="0.0" z="0.0"/>
        </perspective>
        <ortho id="cam-ortho-1" near="0.5" far="500" left="-10" right="10" top="10" bottom="-10">
            <from x="40.0" y="40.0" z="40.0"/>
            <to x="0" y="0" z="0"/>
        </ortho>
    </views>

    <ambient>
        <ambient r="0.80" g="0.80" b="0.80" a="1.0"/>
        <background r="0.5" g="0.60" b="0.80" a="1.0"/>
    </ambient>

    <lights>
        <spot id="spot-light-1" enabled="1" angle="30" exponent="25">
            <location x="0" y="30" z="10" w="1"/>
            <target x="5" y="0" z="0"/>
            <ambient r="0.10" g="0.10" b="0.10" a="1"/>
            <diffuse r="0.70" g="0.70" b="0.70" a="1"/>
            <specular r="0.95" g="0.85" b="0.90" a="1"/>
        </spot>
    </lights>

    <textures>
        <texture id="kitchen-drawer-front" file="images/kitchen/drawer-front-1.jpg"/>
        <texture id="kitchen-drawer-side-wood" file="images/kitchen/drawer-side-wood-1.jpg"/>
        <texture id="kitchen-fridge-front" file="images/kitchen/fridge.jpg"/>
        <texture id="kitchen-fridge-side" file="images/kitchen/metal-2.jpg"/>
        <texture id="seamless-metal" file="images/kitchen/metal-1.jpg"/>
    </textures>

    <materials>
        <material id="default" shininess="10">
            <emission r="0.00" g="0.00" b="0.00" a="1"/>
            <ambient  r="0.70" g="0.70" b="0.70" a="1"/>
            <diffuse  r="0.80" g="0.90" b="0.90" a="1"/>
            <specular r="0.90" g="0.95" b="0.95" a="1"/>
        </material>
        <material id="light-wood" shininess="10">
            <emission r="0.00" g="0.00" b="0.00" a="1"/>
            <ambient  r="0.50" g="0.50" b="0.50" a="1"/>
            <diffuse  r="0.55" g="0.50" b="0.50" a="1"/>
            <specular r="0.30" g="0.28" b="0.28" a="1"/>
        </material>
        <material id="dark-wood" shininess="10">
            <emission r="0.00" g="0.00" b="0.00" a="1"/>
            <ambient  r="0.10" g="0.10" b="0.10" a="1"/>
            <diffuse  r="0.22" g="0.20" b="0.20" a="1"/>
            <specular r="0.13" g="0.12" b="0.12" a="1"/>
        </material>
        <material id="light-metal" shininess="10">
            <emission r="0.00" g="0.00" b="0.00" a="1"/>
            <ambient  r="0.75" g="0.75" b="0.75" a="1"/>
            <diffuse  r="0.85" g="0.85" b="0.85" a="1"/>
            <specular r="0.93" g="0.93" b="0.93" a="1"/>
        </material>
        <material id="dark-metal" shininess="10">
            <emission r="0.00" g="0.00" b="0.00" a="1"/>
            <ambient  r="0.52" g="0.52" b="0.52" a="1"/>
            <diffuse  r="0.64" g="0.64" b="0.64" a="1"/>
            <specular r="0.94" g="0.94" b="0.94" a="1"/>
        </material>
    </materials>
 
    <transformations>
        <transformation id="noop">
            <translate x="0" y="0" z="0"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rect">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
        </primitive>
        <primitive id="cube">
            <cube side="1"/>
        </primitive>
        <primitive id="sphere">
            <sphere radius="0.5" slices="64" stacks="64"/>
        </primitive>
        <primitive id="cylinder">
            <cylinder base="0.5" top="0.5" height="1" slices="64" stacks="64"/>
        </primitive>
        <primitive id="cone">
            <cylinder base="0.5" top="0" height="1" slices="64" stacks="64"/>
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="kitchen-drawer-1"/>
                <componentref id="kitchen-fridge"/>
            </children>
        </component>

        <component id="kitchen-drawer-knob-cylinder">
