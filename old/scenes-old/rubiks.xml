<yas>
    <scene root="root" axis_length="4.0"/>

    <views default="cam-perspective-0">
        <perspective id="cam-perspective-0" near="0.5" far="500" angle="30">
            <from x="-15.0" y="15.0" z="15.0"/>
            <to x="0.0" y="0.0" z="0.0"/>
        </perspective>
    </views>

    <ambient>
        <ambient r="0.80" g="0.80" b="0.80" a="1.0"/>
        <background r="0.5" g="0.60" b="0.80" a="1.0"/>
    </ambient>

    <lights>
        <spot id="spot-light-4" enabled="1" angle="30" exponent="25">
            <location x="0" y="30" z="10" w="1"/>
            <target x="5" y="0" z="0"/>
            <ambient r="0.10" g="0.10" b="0.10" a="1"/>
            <diffuse r="0.70" g="0.70" b="0.70" a="1"/>
            <specular r="0.95" g="0.85" b="0.90" a="1"/>
        </spot>
    </lights>

    <textures>
        <texture id="tex-rubik-top"    file="images/rubiks-top.png"/>
        <texture id="tex-rubik-bottom" file="images/rubiks-bottom.png"/>
        <texture id="tex-rubik-left"   file="images/rubiks-left.png"/>
        <texture id="tex-rubik-right"  file="images/rubiks-right.png"/>
        <texture id="tex-rubik-front"  file="images/rubiks-front.png"/>
        <texture id="tex-rubik-back"   file="images/rubiks-back.png"/>
    </textures>

    <materials>
        <material id="mat-1" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="0"/>
            <ambient  r="0.7" g="0.7" b="0.7" a="1"/>
            <diffuse  r="0.8" g="0.9" b="0.9" a="1"/>
            <specular r="0.90" g="0.95" b="0.95" a="1"/>
        </material>
    </materials>
 
    <transformations>
        <transformation id="noop">
            <translate x="0" y="0" z="0"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rect">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
                <scale x="1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="rubik"/>
            </children>
        </component>

        <component id="rubik-top">
            <transformation>
                <rotate axis="x" angle="-90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-rubik-top" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="rubik-bottom">
            <transformation>
                <rotate axis="x" angle="90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-rubik-bottom" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="rubik-left">
            <transformation>
                <rotate axis="y" angle="-90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-rubik-left" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="rubik-right">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-rubik-right" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="rubik-front">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-rubik-front" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="rubik-back">
            <transformation>
                <rotate axis="y" angle="180"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-rubik-back" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rect"/>
            </children>
        </component>

        <component id="rubik">
            <transformation>
                <scale x="1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="rubik-top"/>
                <componentref id="rubik-bottom"/>
                <componentref id="rubik-left"/>
                <componentref id="rubik-right"/>
                <componentref id="rubik-front"/>
                <componentref id="rubik-back"/>
            </children>
        </component>
    </components>
</yas>
